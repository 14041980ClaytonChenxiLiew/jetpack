{
	"name": "automattic/jetpack-sample",
	"description": "Sample package to test soft wordpress",
	"type": "library",
	"license": "GPL-2.0-or-later",
	"require-dev": {
		"phpunit/phpunit": "^5.7 || ^6.5 || ^7.5",
		"leogermani/wordbless": "@dev"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"phpunit": [
			"@composer install",
			"./vendor/phpunit/phpunit/phpunit --colors=always"
		],
		"post-update-cmd": "php -r \"copy('vendor/leogermani/wordbless/src/dbless-wpdb.php', 'wordpress/wp-content/db.php');\""
	},
	"repositories": [
		{
			"type": "path",
			"url": "../*"
		},
		{
			"type": "vcs",
			"url": "https://github.com/leogermani/wordbless"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true
}
